{
	"name": "broadcast-websocket",
	"version": "0.1.0",
	"description": "Shared WebSocket connection across multiple contexts (windows, pages, embedded views).",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"sideEffects": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"build:demo": "tsup demo/client.ts --out-dir demo/dist --format esm --no-dts",
		"dev": "tsup --watch",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run build",
		"demo:server": "node scripts/server.js",
		"demo:react": "pnpm -C demo/react dev",
		"server": "node scripts/server.js",
		"start": "node scripts/server.js",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write ."
	},
	"keywords": [
		"websocket",
		"broadcast",
		"client",
		"shared",
		"multi-context",
		"multi-window",
		"broadcastchannel"
	],
	"author": "Jihoon",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/akdlsz21/broadcast-websocket.git"
	},
	"bugs": {
		"url": "https://github.com/akdlsz21/broadcast-websocket/issues"
	},
	"homepage": "https://github.com/akdlsz21/broadcast-websocket#readme",
	"engines": {
		"node": ">=16"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/ws": "^8.18.1",
		"@vitest/coverage-v8": "^4.0.13",
		"happy-dom": "^20.0.10",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"vitest": "^4.0.13"
	},
	"dependencies": {
		"ws": "^8.18.3"
	}
}
