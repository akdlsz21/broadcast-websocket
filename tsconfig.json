{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],

		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"noImplicitOverride": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,

		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,

		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
